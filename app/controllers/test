    def search(name)
        @categories = ['All', 'Vegan', 'Vegetarian', 'Gluten-Free', "Halal", "Kosher"]
        if name
            case name
            when "Vegan"
                @sandwiches = Sandwich.all.select{|s| s.is_vegan?}
            when "Vegetarian"
                @sandwiches = Sandwich.all.select{|s| s.is_vegetarian?}
            when "Gluten-Free"
                @sandwiches = Sandwich.all.select{|s| s.is_gluten_free?}
            else
                @sandwiches = Sandwich.all
            end
        end
        @sandwiches
    end