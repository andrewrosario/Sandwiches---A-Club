<%= form_for user do |f| %>
<div class='container shadow text-center mt-3 pt-4 pb-4'>
  <%= f.label 'Username:' %>
  <%= f.text_field :username, {class: 'w-50'} %>
  <br><br>
  <%= f.label :display_name %>
  <%= f.text_field :display_name, {class: 'w-50'} %>
  <br><br>  
  <%= f.label :password %>
  <%= f.password_field :password, {class: 'w-50'} %>
  <br><br>  
  <%= f.label "Confirm" %>
  <%= f.password_field :password_confirmation, {class: 'w-50'} %>
  <br><br> 
  <%= f.label "E-mail address" %>
  <%= f.text_field :email, {class: 'w-50'} %> 
  <br><br> 
  <%= f.label :age %>
  <%= f.number_field :age, {class: 'w-50'} %>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio, {class: 'w-50'} %>
  <br><br>
  <%= f.label "Upload an Image to be Used as Your Avatar" %>
  <%= f.file_field :avatar %><br><br>
  <%= f.submit %>
  </div>
<% end %>

<% if user.errors.any? %>
  <p><%= pluralize(user.errors.count, 'error') %> prevented you from creating an account:</p>
  <ul>
    <% user.errors.full_messages.each do |err| %>
      <li><%= err %></li>
    <% end %>
  </ul>
<% end %> 