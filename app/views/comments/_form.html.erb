<script>
    function updateTextInput(val) {
          console.log('====VAL===')
          console.log(val)
          document.getElementById('textInput').innerHTML=val; 
        }
</script>
<div>
<%= form_with model: @comment, url: comments_path, class: 'comment_form' do |f| %>
    <%= f.hidden_field :sandwich_id, value: sandwich.id %>
    <%= f.hidden_field :user_id, value: session[:user_id] %>
    <%= f.label :title %><br>
    <%= f.text_field :title, {class: 'w-75'} %>
    <br>
    <%= f.label :rating %><br>
    <%= f.range_field :rating, {min: 0, max: 5, step: 0.25, value: 5, onchange: "updateTextInput(this.value);", class: 'w-75'} %>
    <label id="textInput">5</label><br>
    <%= f.label :content %><br>
    <%= f.text_area :content, {class: 'w-75 h-50'} %><br>
    <%= f.submit "Post", class: 'w-25' %>
<% end %>
</div>