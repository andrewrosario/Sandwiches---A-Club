<h1>Browse Sandwiches</h1>

<%= form_tag('/sandwiches/search')%>
<%= label_tag(:search, 'Search by Name')%>
<%= search_field(:search, :name)%>
<%= label_tag(:search, 'or Filter results by')%>
<%= select_tag('category', options_for_select(@categories.map{ |c| [c,c] }))%>
<%= submit_tag "Search" %>

<ol>
    <% @sandwiches.each do |s| %>
        <li><%= link_to s.title, sandwich_path(s) %> - <%= s.average_rating %> stars</li>
    <% end %>
</ol>