<div class='text-center container'>
    <h1>New Sandwich</h1>

    <div class='container'>
        <p>Please name and describe your sandwich</p>
        <p>You will add ingredients on the next page</p>
        <%= form_with model: @sandwich do |f| %>
            <%= f.hidden_field :user_id, value: session[:user_id] %>
            <%= f.label :title %><br>
            <%= f.text_field :title %><br>
            <%= f.label :description %><br>
            <%= f.text_area :description %><br>
            <%= f.label :instructions %><br>
            <%= f.text_area :instructions %><br>
            <br>
            <%= f.label 'Upload a Photo' %><br>
            <%= f.file_field :sandwich_photo %><br><br>
            <%= f.submit %>
        <%end%>
        <br>
        <%= flash[:error] %>
    </div>
</div>


